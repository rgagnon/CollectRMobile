<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @section.object %>
    <h1>Edit <%= @section.form_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @section.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @section.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Form: </td>
              <td class="itemValue"><input type="text" name="section[form_id]" value="<%= @section.form_id %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
