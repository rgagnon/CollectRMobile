<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @section.form_id %></h1>
    <a href="<%= url_for :action => :show, :id => @section.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @section.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @section.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="section[form_id]" class="fieldLabel">Form</label>
            <input type="text" id="section[form_id]" name="section[form_id]" value="<%= @section.form_id %>" <%= placeholder( "Form" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
