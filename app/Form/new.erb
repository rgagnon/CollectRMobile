<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @form.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @form.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="form[form_template_id]" class="fieldLabel">Form template</label>
            <input type="text" id="form[form_template_id]" name="form[form_template_id]" <%= placeholder("Form template") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
