<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @form.form_template_id %></h1>
    <a href="<%= url_for :action => :show, :id => @form.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @form.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @form.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="form[form_template_id]" class="fieldLabel">Form template</label>
            <input type="text" id="form[form_template_id]" name="form[form_template_id]" value="<%= @form.form_template_id %>" <%= placeholder( "Form template" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
