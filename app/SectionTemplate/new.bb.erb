<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New SectionTemplate</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @sectiontemplate.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Form template: </td>
                <td class="itemValue"><input type="text" name="sectiontemplate[form_template_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Section id parent: </td>
                <td class="itemValue"><input type="text" name="sectiontemplate[section_id_parent]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Section type: </td>
                <td class="itemValue"><input type="text" name="sectiontemplate[section_type_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Name fr: </td>
                <td class="itemValue"><input type="text" name="sectiontemplate[name_fr]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Name en: </td>
                <td class="itemValue"><input type="text" name="sectiontemplate[name_en]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Effective date: </td>
                <td class="itemValue"><input type="text" name="sectiontemplate[effective_date]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">End date: </td>
                <td class="itemValue"><input type="text" name="sectiontemplate[end_date]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Is conditionnal: </td>
                <td class="itemValue"><input type="text" name="sectiontemplate[is_conditionnal]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Order: </td>
                <td class="itemValue"><input type="text" name="sectiontemplate[order]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
