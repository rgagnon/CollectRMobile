<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @response.section_id %></h1>
    <a href="<%= url_for :action => :show, :id => @response.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @response.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @response.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="response[section_id]" class="fieldLabel">Section</label>
            <input type="text" id="response[section_id]" name="response[section_id]" value="<%= @response.section_id %>" <%= placeholder( "Section" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="response[question_value_id]" class="fieldLabel">Question value</label>
            <input type="text" id="response[question_value_id]" name="response[question_value_id]" value="<%= @response.question_value_id %>" <%= placeholder( "Question value" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="response[question_id]" class="fieldLabel">Question</label>
            <input type="text" id="response[question_id]" name="response[question_id]" value="<%= @response.question_id %>" <%= placeholder( "Question" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="response[value]" class="fieldLabel">Value</label>
            <input type="text" id="response[value]" name="response[value]" value="<%= @response.value %>" <%= placeholder( "Value" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
