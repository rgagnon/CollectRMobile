<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Response</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @response.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Section: </td>
                <td class="itemValue"><input type="text" name="response[section_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Question value: </td>
                <td class="itemValue"><input type="text" name="response[question_value_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Question: </td>
                <td class="itemValue"><input type="text" name="response[question_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Value: </td>
                <td class="itemValue"><input type="text" name="response[value]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
