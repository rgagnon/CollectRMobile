<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @question.section_id %></h1>
    <a href="<%= url_for :action => :show, :id => @question.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @question.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @question.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="question[section_id]" class="fieldLabel">Section</label>
            <input type="text" id="question[section_id]" name="question[section_id]" value="<%= @question.section_id %>" <%= placeholder( "Section" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[data_type_id]" class="fieldLabel">Data type</label>
            <input type="text" id="question[data_type_id]" name="question[data_type_id]" value="<%= @question.data_type_id %>" <%= placeholder( "Data type" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[label_fr]" class="fieldLabel">Label fr</label>
            <input type="text" id="question[label_fr]" name="question[label_fr]" value="<%= @question.label_fr %>" <%= placeholder( "Label fr" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[label_en]" class="fieldLabel">Label en</label>
            <input type="text" id="question[label_en]" name="question[label_en]" value="<%= @question.label_en %>" <%= placeholder( "Label en" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[help_fr]" class="fieldLabel">Help fr</label>
            <input type="text" id="question[help_fr]" name="question[help_fr]" value="<%= @question.help_fr %>" <%= placeholder( "Help fr" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[help_en]" class="fieldLabel">Help en</label>
            <input type="text" id="question[help_en]" name="question[help_en]" value="<%= @question.help_en %>" <%= placeholder( "Help en" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[is_multiple_choice]" class="fieldLabel">Is multiple choice</label>
            <input type="text" id="question[is_multiple_choice]" name="question[is_multiple_choice]" value="<%= @question.is_multiple_choice %>" <%= placeholder( "Is multiple choice" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[effective_date]" class="fieldLabel">Effective date</label>
            <input type="text" id="question[effective_date]" name="question[effective_date]" value="<%= @question.effective_date %>" <%= placeholder( "Effective date" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[end_date]" class="fieldLabel">End date</label>
            <input type="text" id="question[end_date]" name="question[end_date]" value="<%= @question.end_date %>" <%= placeholder( "End date" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[order]" class="fieldLabel">Order</label>
            <input type="text" id="question[order]" name="question[order]" value="<%= @question.order %>" <%= placeholder( "Order" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[precision]" class="fieldLabel">Precision</label>
            <input type="text" id="question[precision]" name="question[precision]" value="<%= @question.precision %>" <%= placeholder( "Precision" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[scale]" class="fieldLabel">Scale</label>
            <input type="text" id="question[scale]" name="question[scale]" value="<%= @question.scale %>" <%= placeholder( "Scale" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[min_value]" class="fieldLabel">Min value</label>
            <input type="text" id="question[min_value]" name="question[min_value]" value="<%= @question.min_value %>" <%= placeholder( "Min value" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="question[max_value]" class="fieldLabel">Max value</label>
            <input type="text" id="question[max_value]" name="question[max_value]" value="<%= @question.max_value %>" <%= placeholder( "Max value" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
