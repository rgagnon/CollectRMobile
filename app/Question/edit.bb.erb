<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @question.object %>
    <h1>Edit <%= @question.section_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @question.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @question.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Section: </td>
              <td class="itemValue"><input type="text" name="question[section_id]" value="<%= @question.section_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Data type: </td>
              <td class="itemValue"><input type="text" name="question[data_type_id]" value="<%= @question.data_type_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Label fr: </td>
              <td class="itemValue"><input type="text" name="question[label_fr]" value="<%= @question.label_fr %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Label en: </td>
              <td class="itemValue"><input type="text" name="question[label_en]" value="<%= @question.label_en %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Help fr: </td>
              <td class="itemValue"><input type="text" name="question[help_fr]" value="<%= @question.help_fr %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Help en: </td>
              <td class="itemValue"><input type="text" name="question[help_en]" value="<%= @question.help_en %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Is multiple choice: </td>
              <td class="itemValue"><input type="text" name="question[is_multiple_choice]" value="<%= @question.is_multiple_choice %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Effective date: </td>
              <td class="itemValue"><input type="text" name="question[effective_date]" value="<%= @question.effective_date %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">End date: </td>
              <td class="itemValue"><input type="text" name="question[end_date]" value="<%= @question.end_date %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Order: </td>
              <td class="itemValue"><input type="text" name="question[order]" value="<%= @question.order %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Precision: </td>
              <td class="itemValue"><input type="text" name="question[precision]" value="<%= @question.precision %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Scale: </td>
              <td class="itemValue"><input type="text" name="question[scale]" value="<%= @question.scale %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Min value: </td>
              <td class="itemValue"><input type="text" name="question[min_value]" value="<%= @question.min_value %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Max value: </td>
              <td class="itemValue"><input type="text" name="question[max_value]" value="<%= @question.max_value %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
