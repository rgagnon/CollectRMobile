<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @questionvalue.object %>
    <h1>Edit <%= @questionvalue.question_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @questionvalue.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @questionvalue.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Question: </td>
              <td class="itemValue"><input type="text" name="questionvalue[question_id]" value="<%= @questionvalue.question_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Value fr: </td>
              <td class="itemValue"><input type="text" name="questionvalue[value_fr]" value="<%= @questionvalue.value_fr %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Value en: </td>
              <td class="itemValue"><input type="text" name="questionvalue[value_en]" value="<%= @questionvalue.value_en %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Order: </td>
              <td class="itemValue"><input type="text" name="questionvalue[order]" value="<%= @questionvalue.order %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Effective date: </td>
              <td class="itemValue"><input type="text" name="questionvalue[effective_date]" value="<%= @questionvalue.effective_date %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">End date: </td>
              <td class="itemValue"><input type="text" name="questionvalue[end_date]" value="<%= @questionvalue.end_date %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
